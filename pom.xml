<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.yihan</groupId>
    <artifactId>happy</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>war</packaging>

    <name>happy</name>

    <properties>
        <endorsed.dir>${project.build.directory}/endorsed</endorsed.dir>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    
    <!-- local.maven.com内网地址为192.168.19.137 -->
    <!--远程资源库地址-->
    <repositories>
        <repository>
            <!-- 内网maven正式版本发布地址 -->
            <id>local.maven.com-releases</id>
            <name>local internal maven repository</name>
            <url>http://archives-pub.bigdata.99.com:8081/nexus/content/repositories/releases</url>
        </repository>
        <repository>
            <!-- 内网maven每日快照版本发布地址 -->
            <id>local.maven.com-snapshots</id>
            <name>local snapshots maven repository</name>
            <url>http://archives-pub.bigdata.99.com:8081/nexus/content/repositories/snapshots/</url>
        </repository>
        <repository>
            <!-- 外网maven中心库代理 -->
            <id>local.maven.com-proxy</id>
            <name>local internal maven repository</name>
            <url>http://archives-pub.bigdata.99.com:8081/nexus/content/repositories/central</url>
        </repository>
        <!-- 外网cloudera中心库内网代理 -->
        <repository>
            <id>local.maven.com-cloudera</id>
            <name>cloudera maven repository proxy</name>
            <url>http://archives-pub.bigdata.99.com:8081/nexus/content/repositories/cloudera</url>
        </repository>
        <!--        <repository>
            <id>cloudera</id>
            <name>cloudera maven repository</name>
            <url>https://repository.cloudera.com/content/repositories/releases</url>
        </repository>-->
    </repositories>
    <!--远程插件资源库地址-->
    <pluginRepositories>
        <pluginRepository>
            <!-- 外网maven中心库代理 -->
            <id>local.maven.com-proxy</id>
            <name>local internal maven repository</name>
            <url>http://archives-pub.bigdata.99.com:8081/nexus/content/repositories/central</url>
        </pluginRepository>
    </pluginRepositories>

    <dependencies>

        <dependency>
            <groupId>com.wolf</groupId>
            <artifactId>wolf-framework</artifactId>
            <version>3.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <artifactId>httpclient</artifactId>
            <groupId>org.apache.httpcomponents</groupId>
            <version>4.2.1</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.11</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.kamranzafar</groupId>
            <artifactId>jtar</artifactId>
            <version>2.2</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>javax</groupId>
            <artifactId>javaee-api</artifactId>
            <version>6.0</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <compilerArguments>
                        <endorseddirs>${endorsed.dir}</endorseddirs>
                    </compilerArguments>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.1.1</version>
                <configuration>
                    <failOnMissingWebXml>false</failOnMissingWebXml>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
